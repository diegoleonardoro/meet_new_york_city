<body>

    <!-- login page -->
    <section class='register-page'>
        <!-- login page nav -->
        <nav class='register-page-nav'>
            <ul>
                <li class='brand'><a href='#'> <i class="fas fa-map-signs"></i>Log in </a></li>
                <li><a href='#'>Explore neighborhoods</a></li>
                <li><a href='#'>About</a></li>
                <li><a href='#'>Language: English</a></li>
            </ul>
        </nav>
        <!-- end of login page nav -->

        <!-- register -->
        <div class='register'>
            <div class='register-content'>
                <h2>Register</h2>
                <form class='register-form'>
                    <input type="text" name="name" id="name" placeholder="Name" />
                    <input type="email" name="email" id="email" placeholder="Email" />
                    <input type="password" name="password" id="pass" placeholder="Create password" />
                    <input type="password" name="re_pass" placeholder="Repeat password" />
                    <div>
                        <button type='submit' class='register-form-btn'>Register</button>
                        <input type='checkbox' class='register-form-checkbox' id='check'> <a id='goToMainForm' href=''> </input>
                        <label for='check'>Remember me</label>
                    </div>
                </form>
            </div>

            <footer class='register-footer'>
                <p>Already a member <a href='#'>Log in </a></p>
            </footer>
        </div>
        <!-- end of register -->
    </section>
    <!-- end of login page -->

